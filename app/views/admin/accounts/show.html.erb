<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Chỉnh sửa tài khoản</p>
        <%= form_for :account do |f| %>
        <%= f.label :username %>
        <%= f.text_field :Tk, class: "form-control", value: @account.Tk %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", value: @account.name %>
        <%= f.label :birthday %>
        <%= f.text_field :birthday, class: "form-control", value: @account.birthday %>
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", value: @account.email %>
        <%= f.label :role %>
        <%= f.select :role, options_for_select([["User", "2"], ["Admin", "1"]]), class: "form-control", value: @account.role %>
        <%= f.label :class_id %>
        <%= f.text_field :id_lop, class: "form-control", value: @account.id_lop %>
        <%= f.submit "Edit", class: "submit-btn" %>
        <% end %>
        <%= link_to admin_account_path(@account), method: :delete, data: { confirm: "Bạn có chắc là muốn xóa không?" }, class: "delete-btn" do %>
        <span class="fa fa-trash"></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
